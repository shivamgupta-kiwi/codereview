
@{
  ViewBag.Title = @BCMStrategy.Resources.Resource.LblImportInstitution;
  ViewBag.ModuleName = BCMStrategy.Resources.Enums.ModuleName.INSTITUTIONS;
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="ImportInstitutions">
  <div class="container-fluid">
    <!-- Collapsible element -->
    <div>
      <div class="mt-3">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="form-group col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblInstitutionTypes</label> <span class="text-danger">*</span>
                <select class="form-control" id="institutionTypeHashId" name="institutionTypeHashId" data-bind="value: InstitutionTypeHashId">
                  <option selected="selected" value="">@BCMStrategy.Resources.Resource.LblSelect @BCMStrategy.Resources.Resource.LblInstitutionTypes</option>
                </select>
                <span id="errorMessageInstType" aria-live="polite" class="red-text" name="loginError"></span>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="demo-section form-group k-content">
                  <input name="importInstitutionsFile" accept=".csv" class="form-control" id="importInstitutionsFile" type="file" aria-label="files" />
                  <span id="errorMessage" aria-live="polite" class="red-text" name="loginError"></span>
                  <div class="green-text">@BCMStrategy.Resources.Resource.LblNoteForInstitutionImportFile</div>
                </div>
                <a href="~/UploadTemplates/Institution Template.csv" download="Institution Template.csv" target="_blank">@BCMStrategy.Resources.Resource.LblDownloadInstitutionTemplate</a>
              </div>
              <div class="col-md-6">
                <a class="btn blue m375" style="display: none; cursor:pointer;"  href="javascript:"  id="btnValidateInstanceImportFile">@BCMStrategy.Resources.Resource.LblValidate</a>
                <a class="btn btn-primary m375" style="display: none; cursor:pointer;"  href="javascript:"  id="btnInstanceImportFile">@BCMStrategy.Resources.Resource.LblImport</a>
                <a class="btn btn-default  m375" style="cursor:pointer;" id="btnInstitutionImportBack">@BCMStrategy.Resources.Resource.LblBack</a>
              </div>
            </div>

            <div class="row">
              <div class="col-md-8">
                <span id="successMessage" style="color:green"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-4" id="divImportBody">
      <div class="card-body">
        <div id="gridImportInstitutions"></div>
      </div>
    </div>
  </div>
  @section scripts{
  <script>
    var countryName = "@BCMStrategy.Resources.Resource.LblCountryName"
    var institutionName = "@BCMStrategy.Resources.Resource.LblInstitutions"
    var EuropeanUnion = "@BCMStrategy.Resources.Resource.LblIntitutionIsEuropean"
    var EuropeanUnionString = "@BCMStrategy.Resources.Resource.LblEuropeanUnion"
      var backURL = "@Url.Action("Index", "Institutions", new { Area= "BCMStrategy" })";
      var EntityName = "@BCMStrategy.Resources.Resource.LblAcronym";
  </script>
 
    @Scripts.Render("~/Scripts/JsAreas/InstitutionsImportFile.js", "~/Scripts/JsAreas/DropDownList.js")
  }
</form>
