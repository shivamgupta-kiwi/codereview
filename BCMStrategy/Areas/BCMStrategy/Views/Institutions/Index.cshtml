@{
  ViewBag.Title = BCMStrategy.Resources.Resource.LblInstitutions;
  ViewBag.ModuleName = BCMStrategy.Resources.Enums.ModuleName.INSTITUTIONS;
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="institutionForm">
  <div class="container-fluid">
    <!-- Collapse buttons -->
    <div>
      <a class="btn blue" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <i class="fa fa-plus"></i> @BCMStrategy.Resources.Resource.LblAddNew @BCMStrategy.Resources.Resource.LblInstitutions
      </a>
      <a class="btn btn-primary" href="@Url.Action("ImportInstitutions","Institutions",new { Area = "BCMStrategy"})">@BCMStrategy.Resources.Resource.LblImport @BCMStrategy.Resources.Resource.LblInstitutions</a>
      <a class="btn btn-default" id="clearFilters">
        @BCMStrategy.Resources.Resource.LblClearFilter
      </a>
    </div>
    <!-- / Collapse buttons -->
    <!-- Collapsible element -->
    <div class="collapse" id="collapseExample">
      <div class="mt-3">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="form-group col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblCountry</label> <span id="countryAsteriskSign" style="display:none" class="text-danger">*</span>
                <select class="form-control" id="countryMasterHashId" name="countryMasterHashId" data-bind="value: CountryMasterHashId">
                  <option selected="selected" value="">@BCMStrategy.Resources.Resource.SelectCountryName_String</option>
                </select>
              </div>
              <div class="form-group col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblInstitutionTypes</label> <span class="text-danger">*</span>
                <select class="form-control" id="institutionTypeHashId" name="institutionTypeHashId" data-bind="value: InstitutionTypeHashId">
                  <option selected="selected" value="">@BCMStrategy.Resources.Resource.LblSelect @BCMStrategy.Resources.Resource.LblInstitutionTypes</option>
                </select>
              </div>
              <div class="form-group col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblInstitutions</label> <span class="text-danger">*</span>
                <input type="text" maxlength="1000" id="institutionsName" name="institutionsName" class="form-control" data-bind="value: InstitutionsName" />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblEuropeanUnion</label>
                <div class="clearfix"></div>
                <div class="form-check form-check-inline">
                  <input type="radio" checked name="IsEuropeanUnion" id="yes" data-bind="value: IsEuropeanUnion" />
                  <label>Yes</label>
                </div>
                <div class="form-check form-check-inline">
                  <input type="radio" name="IsEuropeanUnion" id="no" data-bind="value: IsEuropeanUnion">
                  <label>No</label>
                </div>
              </div>
              <div class="form-group col-md-4 entityNameDiv">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblAcronym</label> <span class="text-danger"></span>
                <input type="text" maxlength="1000" id="entityName" name="entityName" class="form-control" data-bind="value: EntityName" />
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="demo-section form-group k-content">
                  <div class="green-text">@BCMStrategy.Resources.Resource.LblNoteForInstitutionPage</div>
                </div>
              </div>
            </div>
          </div>

          <div class="card-footer bg-transparent pull-right">
            <a class="btn btn-dark-green" id="btnInstitutionSave">@BCMStrategy.Resources.Resource.LblSave</a>
            <a class="btn btn-blue-grey" id="btnInstitutionCancel">@BCMStrategy.Resources.Resource.LblCancel</a>
          </div>
        </div>
      </div>
    </div>
    <!-- / Collapsible element -->
    <!-- Grid -->
    <div class="card mt-4">
      <div class="card-body">
        <div id="gridInstitutions"></div>
      </div>
    </div>
  </div>
  @section scripts{
    <script>
      var countryName = '@BCMStrategy.Resources.Resource.LblCountryName';
      var institutionType = '@BCMStrategy.Resources.Resource.LblInstitutionTypes';
      var institution = '@BCMStrategy.Resources.Resource.LblInstitutions';
      var Acronym = '@BCMStrategy.Resources.Resource.LblAcronym';
      var noDataFound = '@BCMStrategy.Resources.Resource.LblNoDataFound';
      var deletePopupHeader = "@BCMStrategy.Resources.Resource.LblDeleteConfirmation";
      var deletePopupMessage = "@BCMStrategy.Resources.Resource.LblInstitutionDeleteConfirm";
      var IsEuropeanUnion = "@BCMStrategy.Resources.Resource.LblIntitutionIsEuropean";
      var EuropeanUnionString = "@BCMStrategy.Resources.Resource.LblEuropeanUnion"
    </script>
    @Scripts.Render("~/Scripts/JsAreas/Institutions.js", "~/Scripts/JsAreas/DropDownList.js")
  }
</form>