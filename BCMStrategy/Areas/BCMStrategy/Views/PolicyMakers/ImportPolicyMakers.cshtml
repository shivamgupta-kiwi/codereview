
@{
  ViewBag.Title = @BCMStrategy.Resources.Resource.LblImportPolicyMakers;
  ViewBag.ModuleName = @BCMStrategy.Resources.Enums.ModuleName.POLICYMAKER;
  Layout = "~/Views/Shared/_Layout.cshtml";
}



<form id="ImportPolicyMakers">
  <div class="container-fluid">
    <!-- Collapsible element -->
    <div>
      <div class="mt-3">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="form-group col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblInstitutionTypes</label> <span class="text-danger">*</span>
                <select class="form-control" id="institutionTypeHashId" name="institutionTypeHashId" data-bind="value: InstitutionTypeHashId">
                  <option selected="selected" value="">@BCMStrategy.Resources.Resource.LblSelect @BCMStrategy.Resources.Resource.LblInstitutionTypes</option>
                </select>
                <span id="errorMessageInstType" aria-live="polite" class="red-text" name="loginError"></span>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="demo-section form-group k-content">
                  <input name="importPolicyMakersFile" accept=".csv" class="form-control" id="importPolicyMakersFile" type="file" aria-label="files" />
                  <span id="errorMessage" aria-live="polite" class="red-text" name="loginError"></span>
                  <div class="green-text">@BCMStrategy.Resources.Resource.LblNoteForImportFile</div>
                </div>
                <a href="~/UploadTemplates/Policy Makers Template.csv" download="Policy Makers Template.csv" target="_blank">@BCMStrategy.Resources.Resource.LblDownloadPolicyMakersTemplate</a>
              </div>
              <div class="col-md-6">
                <a class="btn blue m375" style="display: none; cursor:pointer;" href="javascript:" id="btnValidatePolicyMakersImportFile">@BCMStrategy.Resources.Resource.LblValidate</a>
                <a class="btn btn-primary m375" style="display: none; cursor:pointer;" href="javascript:" id="btnPolicyMakersImportFile">@BCMStrategy.Resources.Resource.LblImport</a>
                <a class="btn btn-default  m375" style="cursor:pointer;" id="btnPolicyMakersImportBack">@BCMStrategy.Resources.Resource.LblBack</a>
              </div>
            </div>

            <div class="row">
              <div class="col-md-8">
                <span id="successMessage" style="color:green"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-4" id="divImportBody">
      <div class="card-body">
        <div id="gridImportPolicyMakers"></div>
      </div>
    </div>
  </div>
  @section scripts{
    <script>
      var countryName = '@BCMStrategy.Resources.Resource.LblCountryName';
      var institutionType = '@BCMStrategy.Resources.Resource.LblInstitutionTypes';
      var designationType = '@BCMStrategy.Resources.Resource.LblDesignationType';
      var policyMakerName = '@BCMStrategy.Resources.Resource.LblPolicyMakerName';
      var policyFirstName = '@BCMStrategy.Resources.Resource.LblFirstName';
      var policyLastName = '@BCMStrategy.Resources.Resource.LblLastName';

      var backURL = "@Url.Action("Index", "PolicyMakers", new { Area= "BCMStrategy" })";
    </script>
    @Scripts.Render("~/Scripts/JsAreas/PolicyMakerImportFile.js", "~/Scripts/JsAreas/DropDownList.js")
  }
</form>