
@{
  ViewBag.Title = BCMStrategy.Resources.Resource.LblUserAccessRights;
  ViewBag.ModuleName = BCMStrategy.Resources.Enums.ModuleName.USERACCESSRIGHTS;
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="userAccessRightsForm">
    <div class="container-fluid">
        <!-- Collapse buttons -->
        <div>
            <a class="btn blue" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                <i class="fa fa-plus"></i> @BCMStrategy.Resources.Resource.LblAddNew @BCMStrategy.Resources.Resource.LblUserAccessRights
            </a>
            <a class="btn btn-default" id="clearFilters">
                @BCMStrategy.Resources.Resource.LblClearFilter
            </a>
        </div>
        <!-- / Collapse buttons -->
        <!-- Collapsible element -->
        <div class="collapse" id="collapseExample">
            <div class="mt-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label class="control-label">@BCMStrategy.Resources.Resource.LblUser</label> <span class="text-danger">*</span>
                                <select class="form-control" id="userMasterHashId" name="userMasterHashId" data-bind="value: UserMasterHashId">
                                    <option selected="selected" value="">@BCMStrategy.Resources.Resource.LblSelect @BCMStrategy.Resources.Resource.LblUser</option>
                                </select>
                            </div>

                        </div>
                        <div class="row">
                            <div>
                                <span>Check nodes</span>
                                <div id="treeview"></div>
                            </div>
                            @*<div style="padding-top: 2em;">
                                    <h4>Status</h4>
                                    <p id="result">No nodes checked.</p>
                                </div>*@
                        </div>
                    </div>
                    <div class="card-footer bg-transparent pull-right">
                        <a class="btn btn-dark-green" id="btnUserAccessRightsSave">@BCMStrategy.Resources.Resource.LblSave</a>
                        <a class="btn btn-blue-grey" id="btnUserAccessRightsCancel">@BCMStrategy.Resources.Resource.LblCancel</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- / Collapsible element -->
        <!-- Grid -->
        <div class="card mt-4">
            <div class="card-body">
                <div id="gridUserAccessRights"></div>
            </div>
        </div>
    </div>
    @section scripts{
        <script>
            var user = '@BCMStrategy.Resources.Resource.LblUser';
            var noDataFound = '@BCMStrategy.Resources.Resource.LblNoDataFound';
            var deletePopupHeader = "@BCMStrategy.Resources.Resource.LblDeleteConfirmation"
            @*var deletePopupMessage = "@BCMStrategy.Resources.Resource.LblUserAccessRightsDeleteConfirm"*@
        </script>
        @Scripts.Render("~/Scripts/JsAreas/UserAccessRights.js", "~/Scripts/JsAreas/DropDownList.js")
    }
</form>

