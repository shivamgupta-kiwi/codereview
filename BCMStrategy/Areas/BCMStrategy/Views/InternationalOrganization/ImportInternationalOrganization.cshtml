
@{
  ViewBag.Title = BCMStrategy.Resources.Resource.LblImportInternationalOrganization;
  ViewBag.ModuleName = BCMStrategy.Resources.Enums.ModuleName.INTERNATIONALORGANIZATION;
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="ImportInternationalOrgFileForm">
    <div class="container-fluid">
        <!-- Collapsible element -->
        <div>
            <div class="mt-3">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="demo-section form-group k-content">
                                    <input name="importInternationOrgFile" accept=".csv" class="form-control" id="importInternationOrgFile" type="file" aria-label="files" />
                                    <span id="errorMessage" aria-live="polite" class="red-text" name="loginError"></span>
                                    <div class="green-text">@BCMStrategy.Resources.Resource.LblNoteForImportFile</div>
                                </div>
                                <a href="~/UploadTemplates/International Organization Template.csv" download="International Organization Template.csv" target="_blank">@BCMStrategy.Resources.Resource.LblDownloadInternationalOrgTemplate</a>
                            </div>
                            <div class="col-md-6">
                                <a class="btn blue m375" style="display: none;" href="javascript:" id="btnValidateInternationalOrgImportFile">@BCMStrategy.Resources.Resource.LblValidate</a>
                                <a class="btn btn-primary m375" style="display: none;" href="javascript:" id="btnInternationalOrgImportFile">@BCMStrategy.Resources.Resource.LblImport</a>
                                <a class="btn btn-default  m375" style="cursor:pointer;" id="btnInternationalOrgImportBack">@BCMStrategy.Resources.Resource.LblBack</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <span id="successMessage" style="color:green"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-4" id="divImportBody">
            <div class="card-body">
                <div id="gridInternationalOrganizationImport"></div>
            </div>
        </div>
    </div>
    @section scripts{
        <script>
            var organizationName = "@BCMStrategy.Resources.Resource.LblOrganizationName"
            var designation = "@BCMStrategy.Resources.Resource.LblDesignationType"
            var leaderFirstName = "@BCMStrategy.Resources.Resource.LblFirstName"
            var leaderLastName = "@BCMStrategy.Resources.Resource.LblLastName"
            var leader = "@BCMStrategy.Resources.Resource.LblLeader"
            var entityName = "@BCMStrategy.Resources.Resource.LblEntityName"
            var MultiLateral = "@BCMStrategy.Resources.Resource.LblIsMultiLateral";
            var backURL = "@Url.Action("Index", "InternationalOrganization", new { Area= "BCMStrategy" })";
        </script>
        @Scripts.Render("~/Scripts/JsAreas/InternationalOrganizationImportFile.js")
    }
</form>
