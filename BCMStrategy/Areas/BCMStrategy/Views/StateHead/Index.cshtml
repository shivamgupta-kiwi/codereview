@using BCMStrategy.Resources;
@{
  ViewBag.Title = Resource.LblHeadStateTitle;
  ViewBag.ModuleName = @BCMStrategy.Resources.Enums.ModuleName.HEADSTATEGOVN;
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="stateHeadForm">
  <div class="container-fluid">
    <!-- Collapse buttons -->
    <div>
      <a class="btn blue" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <i class="fa fa-plus"></i> @BCMStrategy.Resources.Resource.LblAddHeadStateGovn
      </a>
      <a class="btn btn-primary" href="@Url.Action("ImportFile","StateHead",new { Area = "BCMStrategy"})">@Resource.LblImportHeadState</a>
      <a class="btn btn-default" id="clearFilters">
        @BCMStrategy.Resources.Resource.LblClearFilter
      </a>
    </div>
    <!-- / Collapse buttons -->
    <!-- Collapsible element -->
    <div class="collapse" id="collapseExample">
      <div class="mt-3">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <label class="control-label">@Resource.LblCountry</label> <span class="text-danger">*</span>
                <select class="form-control" id="countryMasterHashId" name="countryMasterHashId" data-bind="value: CountryMasterHashId">
                  <option selected="selected" value="">@Resource.SelectCountryName_String</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblDesignationType</label> <span class="text-danger">*</span>
                <select class="form-control" id="designationHashId" name="designationHashId" data-bind="value: DesignationHashId">
                  <option selected="selected" value="">@BCMStrategy.Resources.Resource.LblSelect @BCMStrategy.Resources.Resource.LblDesignationType</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblFirstName</label>
                <input type="text" maxlength="400" id="firstName" name="firstName" class="form-control" data-bind="value: FirstName" />
              </div>
            </div>
            
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <label class="control-label">@BCMStrategy.Resources.Resource.LblLastName</label> <span class="text-danger">*</span>
                <input type="text" maxlength="400" id="lastName" name="lastName" class="form-control" data-bind="value: LastName" />
              </div>
            </div>
          </div>
          <div class="card-footer bg-transparent pull-right">
            <a class="btn btn-dark-green" href="javascript:" id="btnSave">@BCMStrategy.Resources.Resource.LblSave</a>
            <a class="btn btn-blue-grey" href="javascript:" id="btnCancel">@BCMStrategy.Resources.Resource.LblCancel</a>
          </div>
        </div>
      </div>
    </div>
    <!-- / Collapsible element -->
    <!-- Grid -->
    <div class="card mt-4">
      <div class="card-body">
        <div id="gridStateHead"></div>
      </div>
    </div>

  </div>
</form>

@section scripts{
  <script>
    var countryName = "@Resource.LblCountryName"
    var stateHeadName = "@Resource.LblStateHeadName"
    var deletePopupHeader = "@Resource.LblDeleteConfirmation"
    var deletePopupMessage = "@Resource.LblHeadStateDeleteConfirm"
    var noDataFound = '@BCMStrategy.Resources.Resource.LblNoDataFound'
    var designationType = '@BCMStrategy.Resources.Resource.LblDesignationType';
  </script>
  @Scripts.Render("~/Scripts/JsAreas/StateHead.js", "~/Scripts/JsAreas/DropDownList.js")
}

