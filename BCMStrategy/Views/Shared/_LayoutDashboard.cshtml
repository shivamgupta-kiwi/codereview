@using System.Web.Optimization;
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	@*<meta http-equiv="x-ua-compatible" content="ie=edge,ie=11">*@
	<meta http-equiv="x-ua-compatible" content="ie=11">
	<title>@ViewBag.Title</title>
	<link rel="icon" href="~/Content/img/favicon.ico">
	@Styles.Render("~/bundles/Content")
	@Styles.Render("~/Content/Kendo/styles")
	@Styles.Render("~/Content/bootstrapmobile")
	@Styles.Render("~/Content/custom")

	<style>
			/*.k-pager-numbers .k-state-selected, .k-pager-numbers .k-state-selected:hover {
			 background-color:  transparent !important ;
			}
		.k-list>.k-state-selected.k-state-focused {
			background-color: #ebebeb!important;
			border-radius: 1px!important;
			box-shadow: none!important;
			color: #3f51b5!important;
			}*/
	</style>
	<div id="alertMsgDiv" style="display:none;"> <span id="alert-body"></span> </div>
</head>
<body class="fixed-sn navy-blue-skin" id="topPanel">
	@Html.Partial("~/Views/Shared/_Header.cshtml")
	<section>
		@RenderBody()
	</section>
	@Html.Partial("~/Views/Shared/_Footer.cshtml")
	<div class="modal fade" tabindex="-1" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title"></h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-dark-green model-ok" data-dismiss="modal">Ok</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<div class="bg_load" id="divPageLoaderBG" style="display:none;"></div>
	<div class="loader-wrapper" id="divPageLoader" style="display:none;">
		<div class="cssload-load">
			<div class="cssload-blockcont">
				<div class="cssload-block"></div>
				<div class="cssload-block"></div>
				<div class="cssload-block"></div>

				<div class="cssload-block"></div>
				<div class="cssload-block"></div>
				<div class="cssload-block"></div>

				<div class="cssload-block"></div>
				<div class="cssload-block"></div>
				<div class="cssload-block"></div>
			</div>
		</div>
	</div>
</body>
@Scripts.Render("~/bundles/reqScripts")
	@Scripts.Render("~/bundles/KendoScript")
	@RenderSection("scripts", required: false)
<script>
	// SideNav Button Initialization
	$(".button-collapse").sideNav();
	var el = document.querySelector('.custom-scrollbar');
	Ps.initialize(el);
	$('.collapsible').collapsible();

	var LogoutURL = '@Url.Action("Logout", "Login", new { Area = "Account" })';
	var LogoutSuccessURL = '@Url.Action("Index","Login", new { Area = "Account" })';
	var UnauthorizedURL = '@Url.Content(@"~\Error\Unauthorized")';


</script>

@Scripts.Render("~/Scripts/JsAreas/Layout.js")

</html>
