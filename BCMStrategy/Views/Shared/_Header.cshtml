
<header>
	@Html.Partial("~/Views/Shared/_NavigationSideBar.cshtml")
	<!-- Navbar -->
	<nav class="navbar fixed-top green darken-2 scrolling-navbar double-nav">
		<!-- SideNav slide-out button -->
		<div class="float-left">
			<a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
		</div>
		<!-- Breadcrumb-->
		<div class="breadcrumb-dn mr-auto">
			<p><strong><span id="pageTitle">@ViewBag.Title</span></strong></p>
		</div>
		@if (User.Identity.IsAuthenticated)
		{
			<ul class="nav navbar-nav nav-flex-icons ml-auto">
				<li class="nav-item" style="display:none;">
					<a class="nav-link"><i class="fa fa-cog"></i><span class="clearfix d-none d-sm-inline-block">Settings </span> </a>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						@BCMStrategy.Resources.Resource.LblWelcome, <spab id="userName"></spab>
					</a>
					<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
						<a class="dropdown-item" href="@Url.Action("UserProfile","Registration",new { Area= "BCMStrategy"})">@BCMStrategy.Resources.Resource.LblMyProfile</a>
						@*@if (User.IsInRole(BCMStrategy.Resources.Enums.UserType.ADMIN.ToString()))
						{
							<a class="dropdown-item" href="@Url.Action("Index", "GlobalSettings", new { Area = "BCMStrategy" })">@BCMStrategy.Resources.Resource.LblGlobalSetting</a>
						}*@
						<a class="dropdown-item" href="@Url.Action("Index","ChangePassword",new { Area= "BCMStrategy"})">@BCMStrategy.Resources.Resource.LblChangePassword</a>

						<a class="dropdown-item" id="btnLogout" href="javascript:">@BCMStrategy.Resources.Resource.LblLogout</a>
					</div>
				</li>
			</ul>
		}
	</nav>
	<!-- /.Navbar -->
</header>